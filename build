#!/bin/bash
source PKGBUILD


## package update
echo "PACK UPDATE" &&
makepkg --skipinteg --noextract -f &&
mkdir -p ../repository/$arch/ &&
mv -f "$pkgname-$pkgver-1-x86_64.pkg.tar.zst" ../repository/$arch/ &&
git pull &&
git add . &&
git commit -m "update" &&
git push && 


## repository update
echo "REPO UPDATE" &&
cd ../repository/$arch/ &&
repo-add yuros.db.tar.gz *.pkg.tar.zst &&
rm *.old &&
git pull &&
git add . &&
git commit -m "update" &&
git push 